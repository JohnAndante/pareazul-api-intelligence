# Environment template - copy to .env and fill with your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# External APIs Configuration
PAREAZUL_API_URL=https://api.pareazul.com
PAREAZUL_API_KEY=your_pareazul_api_key

# Authentication
AUTH_HEADER_NAME=authorization
REQUIRE_AUTH=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_ERROR_FILE=logs/error.log

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
HELMET_ENABLED=true

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
TEMP_DIR=temp

# Audio Processing
AUDIO_MAX_DURATION=300
AUDIO_ALLOWED_FORMATS=mp3,wav,m4a,ogg

# Session Management
SESSION_TTL=3600
MEMORY_BUFFER_SIZE=20
VECTOR_DIMENSIONS=1536

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# External Services Health Check URLs
SUPABASE_HEALTH_URL=
REDIS_HEALTH_URL=
OPENAI_HEALTH_URL=https://status.openai.com
